{
  "compilerOptions": {
    // MORE INFO: https://aka.ms/tsconfig
    // Follow the case sensitivity rules of the file system itâ€™s running on
    "forceConsistentCasingInFileNames": true,
    // Assumes default exports if none are created manually
    "allowSyntheticDefaultImports": true,
    // Don't generate JS (rollup will do that) only export type declarations
    "emitDeclarationOnly": true,
    // Follow node.js rules for finding modules
    "moduleResolution": "node",
    // Where to place the .d.ts files
    "declarationDir": "types",
    // Skip type checking of default library declaration files
    "skipLibCheck": true,
    // Output a .d.ts file for our library types
    "declaration": true,
    // ECMA Script support
    "target": "es2016",
    // Mapping JS code back to its TS file origins for debugging
    "sourceMap": true,
    // Generate modern JS modules for our library
    "module": "esnext",
    // Directory where the project will be generated
    "outDir": "dist",
    // Enable all strict type-checking options
    "strict": true,
    // Transform JSX into React code
    "jsx": "react",
    // Specify the root folder within your source files
    "rootDir": "src",
    // Emit additional JavaScript to ease support for importing CommonJS modules. This enables `allowSyntheticDefaultImports` for type compatibility
    "esModuleInterop": true,
    // Specify the base directory to resolve non-relative module names
    "baseUrl": "src",
  },
  "exclude": [
    "src/stories",
    "**/*.stories.tsx"
  ]
}